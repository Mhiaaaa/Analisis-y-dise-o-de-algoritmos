package seleccionsort;
public class SeleccionSort {
    public static void main(String[] args) {
        int[] datos = {64, 25, 12, 22, 11};

        System.out.println("Lista original:");
        mostrarArray(datos);

        seleccionSort(datos);

        System.out.println("Lista ordenada:");
        mostrarArray(datos);
    }

    public static void seleccionSort(int[] arr) {
        int n = arr.length;

        for (int i = 0; i < n - 1; i++) {
            int minIdx = i;

            // Buscar el Ã­ndice del menor elemento
            for (int j = i + 1; j < n; j++) {
                if (arr[j] < arr[minIdx]) {
                    minIdx = j;
                }
            }

            int temp = arr[minIdx];
            arr[minIdx] = arr[i];
            arr[i] = temp;
        }
    }

    public static void mostrarArray(int[] arr) {
        for (int num : arr) {
            System.out.print(num + " ");
        }
        System.out.println();
    }
}
